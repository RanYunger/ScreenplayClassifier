<UserControl x:Class="ScreenplayClassifier.MVVM.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Style="{StaticResource UserControlStyle}">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ClearFilterCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.RowSpan="2" Grid.ColumnSpan="2" Source="/Media/Images/Reports.png" Opacity="0.3"/>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Reports" FontSize="80" HorizontalAlignment="Center"
                   Style="{StaticResource TextBlockStyle}"/>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <GroupBox Margin="10" Style="{StaticResource GroupBoxStyle}">
                <GroupBox.Header>
                    <WrapPanel>
                        <Image Source="/Media/Images/Filter.png" Height="30" Width="30"/>
                        <TextBlock Text="Filter" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    </WrapPanel>
                </GroupBox.Header>
                <WrapPanel HorizontalAlignment="Center">
                    <StackPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Text="Title contains:" Style="{StaticResource TextBlockStyle}"/>
                            <TextBox Width="100" Text="{Binding TitlePattern}" Margin="20,0,0,0" Style="{StaticResource BaseTextBoxStyle}"/>
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Text="Genre is:" Style="{StaticResource TextBlockStyle}"/>
                            <ComboBox Width="100" Margin="55,0,0,0" ItemsSource="{Binding GenreOptions}" SelectedValue="{Binding FilteredGenre}"
                                      Style="{StaticResource ComboBoxStyle}"/>
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Text="SubGenre 1 is:" Style="{StaticResource TextBlockStyle}"/>
                            <ComboBox Width="100" Margin="18,0,0,0" ItemsSource="{Binding SubGenre1Options}"
                                      SelectedValue="{Binding FilteredSubGenre1}" Style="{StaticResource ComboBoxStyle}"/>
                        </WrapPanel>
                        <WrapPanel Margin="5">
                            <TextBlock Text="SubGenre 2 is:" Style="{StaticResource TextBlockStyle}"/>
                            <ComboBox Width="100" Margin="18,0,0,0" ItemsSource="{Binding SubGenre2Options}"
                                      SelectedValue="{Binding FilteredSubGenre2}" Style="{StaticResource ComboBoxStyle}"/>
                        </WrapPanel>
                    </StackPanel>
                    <Button Command="{Binding FilterReportsCommand}" Height="120" Width="120" IsEnabled="{Binding CanClear}"
                            ToolTip="Filter reports" Margin="10,0,0,0" Style="{StaticResource ButtonStyle}">
                        <Button.Content>
                            <Image Source="/Media/Images/Filter.png"/>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding ClearFilterCommand}" Height="120" Width="120" ToolTip="Clear filter"
                        Margin="10" Style="{StaticResource ButtonStyle}">
                        <Button.Content>
                            <Image Source="/Media/Images/Clear.png"/>
                        </Button.Content>
                    </Button>
                </WrapPanel>
            </GroupBox>
            <DataGrid ItemsSource="{Binding Reports}" Height="420" IsReadOnly="True" SelectionMode="Single" Margin="10,0,10,0"
                      Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Path=Screenplay.Title}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="Owner" Binding="{Binding Path=Owner.Username}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="Genre" Binding="{Binding Path=Screenplay.ActualGenre}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="SubGenre 1" Binding="{Binding Path=Screenplay.ActualSubGenre1}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="SubGenre 2" Binding="{Binding Path=Screenplay.ActualSubGenre2}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTemplateColumn Width="70" HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Details" Command="{Binding ShowReportViewCommand}" Width="65" ToolTip="View Classification Report"
                                        Style="{StaticResource ButtonStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
            <WrapPanel>
                <StackPanel>
                    <TextBlock Text="Genre" FontSize="30" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
                    <lvc:PieChart x:Name="GenrePieChart" Height="250" Width="250" LegendLocation="Bottom" Series="{Binding GenreSeries}"
                      Hoverable="True" Margin="20">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="20" TextBlock.FontSize="10"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="SubGenre 1" FontSize="30" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
                    <lvc:PieChart Height="250" Width="250" LegendLocation="Bottom" Series="{Binding SubGenre1Series}"
                                  SeriesColors="{Binding ElementName=GenrePieChart, Path=SeriesColors}" Hoverable="True" Margin="20">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="20" TextBlock.FontSize="10"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="SubGenre 2" FontSize="30" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
                    <lvc:PieChart Height="250" Width="250" LegendLocation="Bottom" Series="{Binding SubGenre2Series}"
                                  SeriesColors="{Binding ElementName=GenrePieChart, Path=SeriesColors}" Hoverable="True" Margin="20">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="20" TextBlock.FontSize="10"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>
                </StackPanel>
            </WrapPanel>
            <lvc:CartesianChart x:Name="UsersCartesianChart" Series="{Binding OwnerSeries}" Height="300" LegendLocation="Left">
                <lvc:CartesianChart.Style>
                    <Style TargetType="lvc:CartesianChart">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=MainViewModel.UserToolbarViewModel.User.Role}" Value="Guest">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=MainViewModel.UserToolbarViewModel.User.Role}" Value="Member">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=MainViewModel.UserToolbarViewModel.User.Role}" Value="Admin">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </lvc:CartesianChart.Style>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Owners" Labels="{Binding OwnerLabels}"/>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Records" LabelFormatter="{Binding LabelFormatter}"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </StackPanel>
    </Grid>
</UserControl>
