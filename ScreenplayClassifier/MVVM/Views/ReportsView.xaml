<UserControl x:Class="ScreenplayClassifier.MVVM.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="700"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Reports" FontSize="40" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <GroupBox Header="Filter" Margin="10" Style="{StaticResource GroupBoxStyle}">
                <WrapPanel HorizontalAlignment="Center">
                    <DataGrid Margin="10" Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Category" Width="150" IsReadOnly="True"
                                                HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                            <DataGridTextColumn Header="Value" Width="150" HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Command="{Binding FilterReportsCommand}" Height="80" Width="80" IsEnabled="{Binding CanClear}"
                            ToolTip="Filter reports" Margin="10,0,0,0" Style="{StaticResource ButtonStyle}">
                        <Button.Content>
                            <Image Source="/Media/Images/Filter.png"/>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding ClearFilterCommand}" Height="80" Width="80" IsEnabled="{Binding CanClear}" ToolTip="Clear filter"
                        Margin="10" Style="{StaticResource ButtonStyle}">
                        <Button.Content>
                            <Image Source="/Media/Images/Clear.png"/>
                        </Button.Content>
                    </Button>
                </WrapPanel>
            </GroupBox>
            <DataGrid ItemsSource="{Binding ClassificationReports}" Height="485" IsReadOnly="True" SelectionMode="Single" FontSize="20"
                      Margin="10,0,10,0" Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Screenplay.Name}" Width="300"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="Genre" Binding="{Binding Path=Screenplay.ClassifiedGenre}" Width="125"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="SubGenre 1" Binding="{Binding Path=Screenplay.ClassifiedSubGenre1}" Width="125"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="SubGenre 2" Binding="{Binding Path=Screenplay.ClassifiedSubGenre2}" Width="125"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <!--<DataGridTemplateColumn Width="50">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Command="{Binding OpenReportViewCommand}" Style="{StaticResource ButtonStyle}">
                                    <Button.Content>
                                        <Image Source="/Media/Images.Info.png" Height="50" Width="50"/>
                                    </Button.Content>
                                </Button>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>-->
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Statistics" FontSize="40" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <WrapPanel Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
                <WrapPanel Margin="10">
                    <TextBlock Text="Duration:" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                    <TextBox Text="{Binding Path=SelectedDuration, StringFormat={}{0:mm':'ss}}" Width="100" Margin="10,0,10,0"
                         Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                </WrapPanel>
            </StackPanel>
            <lvc:CartesianChart>
                
            </lvc:CartesianChart>
            <lvc:PieChart>
                
            </lvc:PieChart>
        </WrapPanel>
    </Grid>
</UserControl>
