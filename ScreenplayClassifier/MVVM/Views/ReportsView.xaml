<UserControl x:Class="ScreenplayClassifier.MVVM.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Reports" FontSize="40" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <GroupBox Header="Filter" Margin="10" Style="{StaticResource GroupBoxStyle}">
                <WrapPanel HorizontalAlignment="Center">
                    <DataGrid Margin="10" Style="{StaticResource DataGridStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Category" Width="150" IsReadOnly="True"
                                                HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                            <DataGridTextColumn Header="Value" Width="150" HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Command="{Binding FilterReportsCommand}" Height="80" Width="80" IsEnabled="{Binding CanClear}"
                            ToolTip="Filter reports" Margin="10,0,0,0" Style="{StaticResource ButtonStyle}">
                        <Button.Content>
                            <Image Source="/Media/Images/Filter.png"/>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding ClearFilterCommand}" Height="80" Width="80" IsEnabled="{Binding CanClear}" ToolTip="Clear filter"
                        Margin="10" Style="{StaticResource ButtonStyle}">
                        <Button.Content>
                            <Image Source="/Media/Images/Clear.png"/>
                        </Button.Content>
                    </Button>
                </WrapPanel>
            </GroupBox>
            <DataGrid ItemsSource="{Binding Reports}" Height="485" IsReadOnly="True" SelectionMode="Single" Margin="10,0,10,0"
                      Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Screenplay.Name}" Width="175"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="Genre" Binding="{Binding Path=Screenplay.ActualGenre}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="SubGenre 1" Binding="{Binding Path=Screenplay.ActualSubGenre1}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTextColumn Header="SubGenre 2" Binding="{Binding Path=Screenplay.ActualSubGenre2}" Width="100"
                                        HeaderStyle="{StaticResource DataGridMainColumnHeaderStyle}"/>
                    <DataGridTemplateColumn Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Details" Command="{Binding ShowReportViewCommand}" ToolTip="View Classification Report"
                                        Style="{StaticResource ButtonStyle}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <TextBlock Grid.Row="0" Grid.Column="1" Text="Statistics" FontSize="40" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <WrapPanel Grid.Row="1" Grid.Column="1">
            <!--<lvc:CartesianChart Height="485" Width="485" Margin="0,0,20,0">

            </lvc:CartesianChart>-->
            <lvc:PieChart Height="485" Width="485" Margin="20,0,0,0">

            </lvc:PieChart>
        </WrapPanel>
    </Grid>
</UserControl>
