<UserControl x:Class="ScreenplayClassifier.MVVM.Views.ArchivesByPercentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="900"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Row="0" Grid.ColumnSpan="2">
            <Button Command="{Binding BackCommand}" Cursor="Hand" ToolTip="Back" Margin="10" Style="{StaticResource ButtonStyle}">
                <Button.Content>
                    <Image Source="/Media/Images/Back.png"/>
                </Button.Content>
            </Button>
            <TextBlock Text="Archives by Percent" Grid.ColumnSpan="4" FontSize="60" Margin="350,10,0,0" Style="{StaticResource TextBlockStyle}"/>
        </WrapPanel>
        <GroupBox Grid.Row="1" Margin="10" Style="{StaticResource GroupBoxStyle}">
            <GroupBox.Header>
                <WrapPanel>
                    <Image Source="/Media/Images/Filter.png" Height="30" Width="30"/>
                    <TextBlock Text="Filter" FontSize="20" Style="{StaticResource TextBlockStyle}"/>
                </WrapPanel>
            </GroupBox.Header>
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="Genre is:" Style="{StaticResource TextBlockStyle}"/>
                        <ComboBox Width="100" ItemsSource="{Binding GenreOptions}" SelectedItem="{Binding FilteredGenre}" Margin="45,10,0,10"
                                  Style="{StaticResource ComboBoxStyle}"/>
                        <TextBlock Text="Percentage:" Margin="10" Style="{StaticResource TextBlockStyle}"/>
                        <Slider x:Name="GenrePercentageSlider" Width="200" Maximum="100" TickFrequency="10" Margin="2,10,0,10"
                                Style="{StaticResource SliderStyle}"/>
                        <TextBox Text="{Binding ElementName=GenrePercentageSlider, Path=Value}" Width="50" TextAlignment="Center"
                                 Margin="10,10,0,10" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                        <TextBlock Text="-" Margin="5" Style="{StaticResource TextBlockStyle}"/>
                        <TextBox Text="{Binding ElementName=GenreSDSlider, Path=Value}" Width="50" TextAlignment="Center" Margin="0,10,0,10"
                                 Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="SubGenre 1 is:" Style="{StaticResource TextBlockStyle}"/>
                        <ComboBox Width="100" ItemsSource="{Binding SubGenre1Options}"
                                      SelectedItem="{Binding FilteredSubGenre1}" Margin="10" Style="{StaticResource ComboBoxStyle}"/>
                        <TextBlock Text="Percentage:" Margin="0,10,0,10" Style="{StaticResource TextBlockStyle}"/>
                        <Slider x:Name="SubGenre1PercentageSlider" Width="200" Maximum="100" TickFrequency="10" Margin="10"
                                Style="{StaticResource SliderStyle}"/>
                        <TextBox Text="{Binding ElementName=SubGenre1PercentageSlider, Path=Value}" Width="50" TextAlignment="Center"
                                 Margin="0,10,0,10" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                        <TextBlock Text="-" Margin="5" Style="{StaticResource TextBlockStyle}"/>
                        <TextBox Text="{Binding ElementName=SubGenre1SDSlider, Path=Value}" Width="50" TextAlignment="Center"
                                 Margin="0,10,0,10" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                    </WrapPanel>
                    <WrapPanel Margin="5">
                        <TextBlock Text="SubGenre 2 is:" Style="{StaticResource TextBlockStyle}"/>
                        <ComboBox Width="100" ItemsSource="{Binding SubGenre2Options}" SelectedItem="{Binding FilteredSubGenre2}"
                                  Margin="10" Style="{StaticResource ComboBoxStyle}"/>
                        <TextBlock Text="Percentage:" Margin="0,10,0,10" Style="{StaticResource TextBlockStyle}"/>
                        <Slider x:Name="SubGenre2PercentageSlider" Width="200" Maximum="100" TickFrequency="10" Margin="10"
                                Style="{StaticResource SliderStyle}"/>
                        <TextBox Text="{Binding ElementName=SubGenre2PercentageSlider, Path=Value}" Width="50" TextAlignment="Center"
                                 Margin="0,10,0,10" Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                        <TextBlock Text="-" Margin="5" Style="{StaticResource TextBlockStyle}"/>
                        <TextBox Text="{Binding ElementName=SubGenre2SDSlider, Path=Value}" Width="50" TextAlignment="Center" Margin="0,10,0,10"
                                 Style="{StaticResource ReadOnlyTextBoxStyle}"/>
                    </WrapPanel>
                </StackPanel>
                <Button Command="{Binding FilterReportsCommand}" Height="100" Width="100" IsEnabled="{Binding CanClear}"
                            ToolTip="Filter archives" Margin="10,0,0,0" Style="{StaticResource ButtonStyle}">
                    <Button.Content>
                        <Image Source="/Media/Images/Filter.png"/>
                    </Button.Content>
                </Button>
                <Button Command="{Binding ClearFilterCommand}" Height="100" Width="100" ToolTip="Clear filter"
                        Margin="10" Style="{StaticResource ButtonStyle}">
                    <Button.Content>
                        <Image Source="/Media/Images/Clear.png"/>
                    </Button.Content>
                </Button>
            </WrapPanel>
        </GroupBox>
    </Grid>
</UserControl>
