<UserControl x:Class="ScreenplayClassifier.MVVM.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="StopButton" Grid.Row="0" Grid.ColumnSpan="2" Command="{Binding ToggleStopCommand}" HorizontalAlignment="Center"
                Height="80" Width="80" ToolTip="Stop all classifications" Margin="0,10,0,10" Style="{StaticResource ButtonStyle}">
            <Button.Content>
                <Image Source="{Binding StopImage}"/>
            </Button.Content>
        </Button>
        <StackPanel Grid.Row="1" Grid.RowSpan="3" Grid.Column="0">
            <TextBlock Text="In Progress" FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,10"
                                   Style="{StaticResource TextBlockStyle}"/>
            <DataGrid ItemsSource="{Binding ActiveClassifications}" SelectionMode="Single" SelectedIndex="{Binding SelectedActiveClassification}"
                      Height="200" FontSize="20" Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" IsReadOnly="True" Binding="{Binding Path=Screenplay.ID}" Width="50"/>
                    <DataGridTextColumn Header="Name" IsReadOnly="True" Binding="{Binding Path=Screenplay.Name}" Width="250"/>
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock Text="In Queue" FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,10"
                                   Style="{StaticResource TextBlockStyle}"/>
            <DataGrid ItemsSource="{Binding InactiveClassifications}" Height="280" FontSize="20" IsReadOnly="True"
                      Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Path=Screenplay.ID}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Path=Screenplay.Name}" Width="250"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <Button Grid.Row="1" Grid.Column="1" Command="{Binding TogglePauseCommand}" Height="50" Width="50" HorizontalAlignment="Center"
                IsEnabled="{Binding CanPause}" ToolTip="Pause classification" Style="{StaticResource ButtonStyle}">
            <Button.Content>
                <Image Source="{Binding PauseImage}"/>
            </Button.Content>
        </Button>
        <ProgressBar x:Name="ProgressBar" Grid.Row="2" Grid.Column="1" Height="30" Width="800" Minimum="0" Maximum="100"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ElementName=ProgressBar, Path=Value, StringFormat={}{0:0}%}" HorizontalAlignment="Center"
                       Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="3" Grid.Column="1">
            <TextBlock Text="{Binding StepDescription}" FontSize="20" HorizontalAlignment="Center" Margin="10"
                       Style="{StaticResource TextBlockStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
