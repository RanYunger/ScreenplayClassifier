<UserControl x:Class="ScreenplayClassifier.MVVM.Views.ProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Text="{Binding ClassificationsText}" FontSize="20" Margin="20,0,0,0" Style="{StaticResource TextBlockStyle}"/>
            <TextBlock Text="{Binding DurationText}" FontSize="20" Margin="785,0,0,0" Style="{StaticResource TextBlockStyle}"/>
        </WrapPanel>
        <ProgressBar x:Name="AllClassificationsProgressBar" Grid.Row="1" Value="{Binding ClassificationsProgress}"
                     Height="30" Width="1000" Minimum="0" Maximum="100"/>
        <TextBlock Grid.Row="1" Text="{Binding ElementName=AllClassificationsProgressBar, Path=Value, StringFormat={}{0:0}%}"
                   HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <ProgressBar x:Name="CurrentClassificationProgressBar" Grid.Row="2" Value="{Binding ClassificationsProgress}"
                     Height="30" Width="1000" Minimum="0" Maximum="100"/>
        <TextBlock Grid.Row="2" Text="{Binding ElementName=CurrentClassificationProgressBar, Path=Value, StringFormat={}{0:0}%}"
                   HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
        <Image Grid.Row="3" gif:ImageBehavior.AnimatedSource="/Media/Gifs/Reading.gif" gif:ImageBehavior.RepeatBehavior="Forever"/>
    </Grid>
</UserControl>
