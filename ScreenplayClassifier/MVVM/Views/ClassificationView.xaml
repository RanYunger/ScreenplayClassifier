<UserControl x:Class="ScreenplayClassifier.MVVM.Views.ClassificationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Browse Screenplays" Style="{StaticResource TabItemStyle}">
                <StackPanel x:Name="BrowseStackPanel" HorizontalAlignment="Center" Visibility="Visible">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=ClassificationStackPanel, Path=Visibility}" Value="Collapsed">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=ClassificationStackPanel, Path=Visibility}" Value="Visible">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,10">
                        <Button x:Name="BrowseScreenplaysButton" Command="{Binding BrowseScreenplaysCommand}" Height="100" Width="100"
                        ToolTip="Browse..." Style="{StaticResource ButtonStyle}">
                            <Button.Content>
                                <Image Source="/Media/Images/Browse.png"/>
                            </Button.Content>
                        </Button>
                        <Button x:Name="ClearScreenplaysButton" Command="{Binding ClearScreenplaysCommand}" Height="100" Width="100" ToolTip="Clear"
                        Margin="10,0,0,0" Style="{StaticResource ButtonStyle}">
                            <Button.Content>
                                <Image Source="/Media/Images/Clear.png"/>
                            </Button.Content>
                        </Button>
                    </WrapPanel>
                    <DataGrid x:Name="BrowsedScreenplaysDataGrid" Height="475" SelectedIndex="{Binding SelectedBrowsedScreenplay}"
                              ItemsSource="{Binding BrowsedScreenplays}" Style="{StaticResource DataGridStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="KeyDown">
                                <i:InvokeCommandAction Command="{Binding CheckKeyCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Width="500" Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="File Path" Width="800" Binding="{Binding Path=FilePath}">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="ProceedToClassificationButton" Command="{Binding ProceedToClassificationCommand}" IsEnabled="False"
                            Height="125" Width="125" ToolTip="Proceed to classification" Margin="0,10,0,0" Style="{StaticResource ButtonStyle}">
                        <Button.Content>
                            <Image Source="/Media/Images/Play.png"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Classify Screenplays" Style="{StaticResource TabItemStyle}">

            </TabItem>
            <TabItem Header="View Classifications" Style="{StaticResource TabItemStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Screenplays" FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,10"
                                   Style="{StaticResource TextBlockStyle}"/>
                        <DataGrid x:Name="ClassifiedScreenplaysDataGrid" Height="475" SelectedIndex="{Binding SelectedClassifiedScreenplay}"
                              ItemsSource="{Binding ClassifiedScreenplays}" Style="{StaticResource DataGridStyle}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="KeyDown">
                                    <i:InvokeCommandAction Command="{Binding CheckKeyCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Width="390" Binding="{Binding Path=Name}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Classification Report" FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,10"
                                   Style="{StaticResource TextBlockStyle}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
