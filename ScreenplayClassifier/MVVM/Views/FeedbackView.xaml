<UserControl x:Class="ScreenplayClassifier.MVVM.Views.FeedbackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Screenplays" FontSize="40" HorizontalAlignment="Center" Margin="0,10,0,10"
                   Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="1" Grid.Column="0">
            <DataGrid Height="520" FontSize="20" IsReadOnly="True" SelectionMode="Single"
                  SelectedIndex="{Binding SelectedClassifiedScreenplay}" ItemsSource="{Binding ClassifiedScreenplays}" Margin="10"
                  Style="{StaticResource DataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="50" IsReadOnly="True" Binding="{Binding Path=Screenplay.ID}"/>
                    <DataGridTextColumn Header="Name" Width="340" IsReadOnly="True" Binding="{Binding Path=Screenplay.Name}"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Width="150" Content="Submit" FontSize="40" Command="{Binding SubmitFeedbackCommand}" ToolTip="Submit Feedback"
                    Margin="10" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
        <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Text="Genres Feedback" FontSize="40" HorizontalAlignment="Center"
                   Margin="0,10,0,10" Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Predicted" FontSize="30" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
            <v:GenresView x:Name="PredictedGenresView" IsEnabled="False"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="2">
            <TextBlock Text="Actual" FontSize="30" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
            <v:GenresView x:Name="ActualGenresView"/>
        </StackPanel>
    </Grid>
</UserControl>
