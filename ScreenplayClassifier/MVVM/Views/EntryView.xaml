<Window x:Class="ScreenplayClassifier.MVVM.Views.EntryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
        Title="Screenplay Classifier" Height="550" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowStyle}">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch">
            <TextBlock FontSize="40" Text="Sign In" HorizontalAlignment="Center" Style="{StaticResource TextBlockStyle}"/>
            <MediaElement x:Name="KickUserMediaElement" Height="245" Width="350" LoadedBehavior="Manual" UnloadedBehavior="Manual"
                          Stretch="Fill" Margin="0,5,0,0">
                <MediaElement.Style>
                    <Style TargetType="MediaElement">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CanSignIn}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CanSignIn}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </MediaElement.Style>
            </MediaElement>
            <Image Source="/Media/Images/Icon.png" Height="250" Width="250">
                <Image.Style>
                    <Style TargetType="Image">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CanSignIn}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding CanSignIn}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,5">
                <Image Source="/Media/Images/Username.png" Height="50" Width="50"/>
                <StackPanel>
                    <TextBox x:Name="UsernameTextBox" Height="20" Width="150" VerticalAlignment="Top"
                             IsEnabled="{Binding CanSignIn}" Margin="20,0,0,0" Style="{StaticResource BaseTextBoxStyle}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="GotFocus">
                                <i:InvokeCommandAction Command="{Binding EnterUsernameTextboxCommand}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="LostFocus">
                                <i:InvokeCommandAction Command="{Binding LeaveUsernameTextboxCommand}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="KeyDown">
                                <i:InvokeCommandAction Command="{Binding CheckKeyCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <WrapPanel x:Name="UsernameErrorWrapPanel" Visibility="Hidden">
                        <Image Source="/Media/Images/Error.png" Height="20" Width="20" HorizontalAlignment="Left" Margin="20,5,0,0"/>
                        <TextBlock Text="{Binding UsernameError}" Foreground="DarkRed" Margin="10,0,0,0"
                                   Style="{StaticResource TextBlockStyle}"/>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" Margin="0,5,0,10">
                <Image Source="/Media/Images/Password.png" Height="50" Width="50"/>
                <StackPanel>
                    <Grid>
                        <PasswordBox x:Name="PasswordBox" Height="20" Width="150" MaxLength="9" VerticalAlignment="Top"
                                 IsEnabled="{Binding CanSignIn}" Margin="20,0,0,0"
                                 Style="{StaticResource PasswordBoxStyle}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="LostFocus">
                                    <i:InvokeCommandAction Command="{Binding LeavePasswordTextboxCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </PasswordBox>
                        <TextBox x:Name="PasswordTextBox" Text="Password" Height="20" Width="150" Foreground="Gray"
                                 VerticalAlignment="Top" IsEnabled="{Binding CanSignIn}" Margin="20,0,0,0"
                                 Style="{StaticResource BaseTextBoxStyle}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="GotFocus">
                                    <i:InvokeCommandAction Command="{Binding EnterPasswordTextboxCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </Grid>
                    <WrapPanel x:Name="PasswordErrorWrapPanel" Visibility="Hidden">
                        <Image Source="/Media/Images/Error.png" Height="20" Width="20" HorizontalAlignment="Left" Margin="20,5,0,0"/>
                        <TextBlock Text="{Binding PasswordError}" Foreground="DarkRed" Margin="10,0,0,0"
                                   Style="{StaticResource TextBlockStyle}"/>
                    </WrapPanel>
                </StackPanel>
            </WrapPanel>
            <Button Command="{Binding SignInCommand}" IsEnabled="{Binding CanSignIn}" Content="Sign In" Height="25" Width="150" Margin="0,0,0,5"
                     Style="{StaticResource ButtonStyle}"/>
            <Button Command="{Binding ContinueAsGuestCommand}" IsEnabled="{Binding CanSignIn}" Content="Continue As Guest"
                    Height="25" Width="150" Margin="0,5,0,10" Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
