<UserControl x:Class="ScreenplayClassifier.MVVM.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:v="clr-namespace:ScreenplayClassifier.MVVM.Views"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Welcome to Screenplay Classifier" HorizontalAlignment="Center" FontSize="70"
                       Style="{StaticResource TextBlockStyle}"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <WrapPanel>
                <Image Source="{Binding LeftArrowImage}" Width="100" Height="100" Cursor="Hand" Margin="25">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding PressLeftCommand}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="MouseUp">
                            <i:InvokeCommandAction Command="{Binding UnpressLeftCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
                <Canvas Height="400" Width="1200">
                    <Image x:Name="ArchivesImage" Source="/Media/Images/Archives.png" Height="300" Width="300" Margin="50">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding ShowArchivesViewCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Archives">
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Classification">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Reports">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <Image x:Name="ClassificationImage" Source="/Media/Images/Classification.png" Height="400" Width="400" Margin="400,0,0,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding ShowClassificationViewCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Archives">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Classification">
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Reports">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <Image x:Name="ReportsImage" Source="/Media/Images/Reports.png" Height="300" Width="300" Margin="850,50,50,50">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseDown">
                                <i:InvokeCommandAction Command="{Binding ShowReportsViewCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <Image.Style>
                            <Style TargetType="Image">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Archives">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Classification">
                                        <Setter Property="Cursor" Value="Arrow"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ModuleName}" Value="Reports">
                                        <Setter Property="Cursor" Value="Hand"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Canvas>
                <Image Source="{Binding RightArrowImage}" Width="100" Height="100" Cursor="Hand" Margin="25">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <i:InvokeCommandAction Command="{Binding PressRightCommand}"/>
                        </i:EventTrigger>
                        <i:EventTrigger EventName="MouseUp">
                            <i:InvokeCommandAction Command="{Binding UnpressRightCommand}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Image>
            </WrapPanel>
            <TextBlock Text="{Binding ModuleName}" HorizontalAlignment="Center" FontSize="60" Margin="10" Style="{StaticResource TextBlockStyle}"/>
            <TextBlock Text="{Binding ModuleDescription}" HorizontalAlignment="Center" FontSize="30" Margin="10" Style="{StaticResource TextBlockStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
